        <h2>@_FactsViewModel.ProductName</h2>
        @if (_FactsViewModel?.KeyWords != null)
        {
            <div>Mots  cl√©: </div>
            <ul>
                @foreach (string keywords in _FactsViewModel.KeyWords)
                {
